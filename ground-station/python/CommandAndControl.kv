#:kivy 1.0.9
#DO NOT USE ANY OTHER VERSION OF KIVY AS IT WILL CAUSE ISSUES 
<PanelHeader>:
    rows:1
    text: 'no text defined'
    colorBackground: 0,0,0,1
    colorText: 1,1,1,1 
    font_size: 15
    canvas:
        Color: #create border (black box)
            rgba: 0,0,0,1
        Rectangle:
            size: self.size
            pos: self.pos
        Color: 
            rgba: self.colorBackground
        Rectangle:#create fill - a box over a black box (3 sets border thickness)
            size: self.width-3, self.height-3
            pos: root.center_x - (self.width-3)/2 , root.center_y - (self.height-3)/2
    Label:
        size: root.size
        pos: root.pos
        text: root.text
        font_size: root.font_size
        color:root.colorText

<ButtonPanel>:
    radio_connect_button: radio_connect_button
    radio_port_input: radio_port_input
    rows: 2
    cols: 2
    Button:
        text: 'ARM'
        size_hint: 0.18,0.6
    GridLayout:
        size_hint: 0.,0.6
        rows: 2
        Button:
            id: radio_connect_button
            text: 'No Radio \nConnection'
            size_hint: 1,0.6
        GridLayout:
            cols: 2
            size_hint: 1,0.2
            Button:
                id: radio_connect_button
                text: '>'
                size_hint: 0.18,1
            TextInput:
                id: radio_port_input
                text: 'port#'
                size_hint: 0.8,1
    Label:
    Label:
    Label:

<CameraFeed>:
    rows: 1
    CameraPlacehold:
        
<CameraPlacehold>:
    rows: 1
    Image: 
        source: '../img/static.gif'
        allow_stretch: True
        Label:
            center: self.parent.center #needed to put overlabel 
            font_size: 20
            bold: True
            text: 'No Camera Feed available'
<TerminalInput>:
    textInput: textInput
    rows: 1
    background_col: 0.1,0.1,0.1,1  
    text_col: 0.333, 1, 0.160, 1
    MyTextInput:
        id: textInput
        text: '>'
        multiline: False
        focus: True
        background_color: self.parent.background_col 
        foreground_color: self.parent.text_col
        cursor_color: self.parent.text_col

<TerminalLog>:
    textLog: textLog
    rows: 1
    background_col: 0.1,0.1,0.15,1 
    text_col: 0.333, 1, 0.160, 1
    canvas:
        Color: 
            rgb: self.background_col
        Rectangle:
            size: self.size
            pos: self.pos
    Label:
        id: textLog
        halign: 'left'
        valign: 'top'
        text_size: root.width, None
        center_x: root.center_x
        center_y: root.center_y
        text: 'this is the terminal log widget'
        background_color: self.parent.background_col
        color: self.parent.text_col
        

<Terminal>:
    terminalInput: terminalInput
    textInput: terminalInput.textInput
    textLog: terminalLog.textLog
    focus_next: terminalInput.textInput
    rows: 3
    colorBackground: 0.1,0.1,0.15,1  
    colorHeader: 0.1,0.1,0.1,1
    colorText: 0.160, 1, 0.870,1
    PanelHeader:
        size_hint: 1,0.1
        font_size: 15
        colorBackground: root.colorHeader #0.05,0.05,0.075,1 
        text: 'Serial Terminal'
        colorText:root.colorText
    TerminalLog:
        id: terminalLog
        size_hint: 1,0.77
        background_col: self.parent.colorBackground
        text_col: self.parent.colorText

    TerminalInput:
        id: terminalInput
        size_hint: 1,0.13
        background_col: self.parent.colorBackground
        text_col: self.parent.colorText
<Instrument>:
    name: 'Instrument x'
    size: 50, 50
    reading: 10.0 #reading gauge displays from 0 to 100 (%) 
    maxReading: 100.0
    minReading: -100.0
    gaugeStartAngle: 180.0
    gaugeEndAngle: 360.0
    reading_sub: 0.00
    maxReading_sub: 100.0
    minReading_sub: -100.0
    gaugeStartAngle_sub: 90.0
    gaugeEndAngle_sub: 270.0
    colorBackground: 0, 0.5, 0.4, 0.3
    colorText: 1,1,1,1
    gaugeColor: 0, 0.5, 0.4, 1
    gaugeColor_sub: 0.878, 0.4, 0, 1
    
    
    canvas:
        #sets backdrop line of main reading 
        Color:
            rgba: 0, 0.5, 0.4, 0.3
        Line:
            width: 8.0
            cap: 'none'
            circle:
                (self.center_x+10, self.center_y-30, min(self.width, self.width)/ 2 -3, self.gaugeStartAngle,self.gaugeEndAngle)
        #sets actual value line of main reading 
        Color:
            rgba: root.gaugeColor
        Line:
            width: 8.0
            cap: 'none'
            circle:
            #WARNING: FOR SOME REASON, DIVIDING BY A PARAMATER CAUSES ZERO DIVISION 
            #    (self.center_x+10, self.center_y-30, (min(self.width, self.width)/2.0) -3, self.gaugeStartAngle, (root.gaugeEndAngle - root.gaugeStartAngle)*(root.reading - root.minReading)/(100-0.0)   )
        #sets actual reading line of sub reading 
        Color:
            rgba: root.gaugeColor_sub
        Line:
            width: 2.0
            cap: 'none'
            circle:
            #WARNING: FOR SOME REASON, DIVIDING BY A PARAMATER CAUSES ZERO DIVISION, SET LAST TWO VALUES MANUALLY (GAUGE MAX READING_SUB - GAUGE MIN READING_SUB)
                (self.center_x+10, self.center_y-30, min(self.width, self.width)*0.75 / 2 -3, (self.gaugeEndAngle_sub - self.gaugeStartAngle_sub)/2 + self.gaugeStartAngle_sub,(self.reading_sub/( 100.0-(-100.0) )) *(self.gaugeEndAngle_sub-self.gaugeStartAngle_sub) + self.gaugeStartAngle_sub + (self.gaugeEndAngle_sub - self.gaugeStartAngle_sub)/2)
    #display main reading as a number 
    Label: 
        font_size: 25
        color: root.colorText
        pos: root.center_x-40, root.center_y-80
        text: str((root.reading))
    Label: 
        font_size: 18
        color: root.colorText
        pos: root.center_x-40, root.center_y-100
        text: '('+str(root.reading_sub)+')'
    Label:
        font_size: 12
        color: root.colorText
        center_x: root.center_x
        center_y: root.top-25
        text: self.parent.name

